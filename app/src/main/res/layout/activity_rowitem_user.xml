<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:innerRadius="0dp"
        android:shape="ring"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_delete_forever_24"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/txtvw_userfirstname"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:checkable="false"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/txtvw_totalconsumed"
                app:layout_constraintStart_toEndOf="@+id/userphoto"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:ignore="TouchTargetSizeCheck"
                tools:text="Kumar Neelamegam" />

            <com.google.android.material.chip.Chip
                android:id="@+id/txtvw_balanceaccount"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/cardTextColor"
                android:checkable="false"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/txtvw_totalconsumed"
                app:layout_constraintStart_toEndOf="@+id/userphoto"
                app:layout_constraintTop_toBottomOf="@+id/txtvw_totalconsumed"
                tools:ignore="TouchTargetSizeCheck"
                tools:text="GUTHABEN: 3.31â‚¬" />

            <ImageView
                android:id="@+id/userphoto"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <com.google.android.material.chip.Chip
                android:id="@+id/txtvw_totalconsumed"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/cardTextColor2"
                android:checkable="false"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/txtvw_balanceaccount"
                app:layout_constraintEnd_toEndOf="@+id/txtvw_userfirstname"
                app:layout_constraintStart_toEndOf="@+id/userphoto"
                app:layout_constraintTop_toBottomOf="@+id/txtvw_userfirstname"
                tools:ignore="TouchTargetSizeCheck"
                tools:text="KONSUM: 601" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>